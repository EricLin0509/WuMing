<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>

  <template class="SecurityOverviewPage" parent="GtkWidget">
    <child>
      <object class="AdwBreakpointBin" id="break_point">
        <property name="width-request">300</property>
        <property name="height-request">120</property>
        <property name="child">
          <object class="AdwClamp" id="clamp">
            <property name="maximum-size">500</property>
            <property name="tightening-threshold">300</property>
            <property name="child">
              <object class="GtkBox" id="box_main">
                <property name="orientation">horizontal</property>
                <property name="height-request">70</property>
                <property name="margin-bottom">50</property>
                <property name="spacing">20</property>
                <property name="homogeneous">true</property>
                <child>
                  <object class="GtkButton" id="scan_overview_button">
                    <property name="child">
                      <object class="AdwButtonContent">
                        <property name="can-shrink">true</property>
                        <property name="label" translatable="yes">Last Scan Time</property>
                        <property name="icon-name">status-ok-symbolic</property>
                        <property name="use-underline">True</property>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="signature_overview_button">
                    <property name="action-name">app.update</property>
                    <property name="child">
                      <object class="AdwButtonContent">
                        <property name="can-shrink">true</property>
                        <property name="label" translatable="yes">Current Signature Status</property>
                        <property name="icon-name">status-ok-symbolic</property>
                        <property name="use-underline">True</property>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </property>
        <child>
          <object class="AdwBreakpoint">
            <condition>max-width: 450px</condition>
            <setter object="clamp" property="maximum-size">300</setter>
            <setter object="clamp" property="tightening-threshold">150</setter>
            <setter object="box_main" property="orientation">vertical</setter>
            <setter object="box_main" property="spacing">10</setter>
            <setter object="box_main" property="height-request">120</setter>
            <setter object="box_main" property="margin-bottom">0</setter>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
